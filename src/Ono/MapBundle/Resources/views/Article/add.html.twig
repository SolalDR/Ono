{% extends "OnoMapBundle::layout.html.twig" %}
{% block title %}{{ parent() }} Article{% endblock %}

{# STYLESHEETS #}
{% block stylesheets %}
{% stylesheets  filter='cssrewrite'
  'bundles/onomap/css/bootstrap.min.css'
  'bundles/onomap/css/style.css'
%}
  <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block body %}
  {% block bodyContent %}{{ parent() }}
  <div class="container-fluid">
    <h1>Nouvel article</h1>

    {# src/OC/PlatformBundle/Resources/views/Advert/form.html.twig #}

    <div class="well">
      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

      {# Les erreurs générales du formulaire. #}
      {{ form_errors(form) }}

      {# Génération automatique des champs pas encore écrits.
         Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
         et tous les champs cachés (type « hidden »). #}
      <div id="dynamicForm">
        {{ form_row(form.tags) }}
        <a href="#" id="add_item_dynamic" class="btn btn-default">Ajouter un Tag</a>
      </div>

      {{ form_rest(form) }}

      {# Fermeture de la balise <form> du formulaire HTML #}
      {{ form_end(form) }}
    </div>
  </div>

  {% endblock %}
{% endblock %}

{# JAVASCRIPT #}
{% block javascripts %}
  {% javascripts
  'bundles/onomap/js/config.js'
  'bundles/onomap/js/loaderManage.js'
  'bundles/onomap/js/main.js'
  "bundles/onomap/js/form.js"
  "bundles/onomap/js/loader.js"
   %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    <script type="text/javascript">
      dynamicTag.init("#article_tags");
    </script>
  {% endjavascripts %}
