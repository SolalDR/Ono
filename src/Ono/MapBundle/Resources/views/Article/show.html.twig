{% extends "OnoMapBundle::layout.html.twig" %}
{% block title %}{{ parent() }} Article{% endblock %}

{% block body %}
  {% block bodyContent %}{{ parent() }}
    <h1>{{ article.title }}</h1>
    <p>
      Le {{ article.dtcreation|date("j/m/y") }} par {{ article.user.firstname }}
    </p>
    <p>
      <p>
        Nombre de like :
        {{ article.nbLikes }}
      </p>
      <p>
        Test :
        {% if is_granted("ROLE_USER") %}
          {% if article|isliking == true %}
          <a href="{{ path("ono_map_article_unlike", {"id": article.id }) }}">J'aime plus</a>
          {% else %}
          <a href="{{ path("ono_map_article_like", {"id": article.id }) }}">J'aime</a>
          {% endif %}
        {% endif %}
      </p>
      Contenu :
      {{article.content | raw}}
      <p>
        <a href="{{ path("ono_map_article_edit", {"id": article.id }) }}">Editer</a>
      </p>
    </p>
    <a href="{{ path("ono_map_article_index") }}">Retour Ã  la liste</a>
  {% endblock %}
{% endblock %}
