
{% extends "OnoMapBundle:Admin:layout.html.twig" %}

{% block body %}

<div class="mainContent">
  <h1>Liste des questions</h1>
  <a class="button-style" href="{{ path('ono_admin_add_question') }}">Ajouter une Question</a>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>
          Id
        </th>
        <th>
          Libell√© question
        </th>
        <th>

        </th>
      </tr>
    </thead>
    <tbody>
      {% for question in questions %}


        <tr>
          <td>
            {{ question.id }}
          </td>
          <td>
            {{ question.libQuestion }}
          </td>
          <td>
            <a class="button-style bg-green no-marge" href="{{ path("ono_admin_edit_question", {"id" : question.id}) }}">Edit</a>
          </td>
          <td>
            <a class="button-style bg-red no-marge" href="{{ path("ono_admin_delete_question", {"id" : question.id}) }}">Supprimer</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}
