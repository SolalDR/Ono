
{% extends "OnoMapBundle:Admin:layout.html.twig" %}

{% block body %}


<div class="mainContent">
  <h1>Liste des Utilisateurs</h1>
  <!-- <a class="button-style bg-blue" href="{{ path('ono_admin_add_user') }}">Ajouter un utilisateur</a> -->

  <table class="table table-hover">
    <thead>
      <tr>
        <th>
          Id
        </th>
        <th>
          Nom
        </th>
        <th>
          Email
        </th>
        <th>
          Pays
        </th>
        <th>
          Langue
        </th>
        <th>
          Roles
        </th>
        <th>
          Promouvoir
        </th>
        <th>
          Editer
        </th>
        <th>
          Supprimer
        </th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
      <tr>
        <td>
          {{ user.id }}
        </td>
        <td>
          {{ user.username }}
        </td>
        <td>
          {{ user.email }}
        </td>
        <td>
          {% if user.country %}
          {{ user.country.libCountry }}
          {% endif %}
        </td>
        <td>
          {% if user.language %}
          {{ user.language.libLanguageFr }}
          {% endif %}
        </td>
        <td>
          {{ user.roles|join(" ") }}
        </td>
        <td>
          <a class="button-style bg-green no-marge" href="{{ path("ono_admin_promote_user", {"id" : user.id}) }}">Promouvoir</a>
        </td>
        <td>
          <a class="button-style bg-green no-marge" href="{{ path("ono_admin_edit_user", {"id" : user.id}) }}">Editer</a>
        </td>
        <td>
          <a class="button-style bg-red no-marge" href="{{ path("ono_admin_delete_user", {"id" : user.id}) }}">Supprimer</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}
