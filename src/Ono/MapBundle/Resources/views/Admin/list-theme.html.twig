
{% extends "OnoMapBundle:Admin:layout.html.twig" %}

{% block body %}

<div class="mainContent">
  <h1>Liste des thèmes</h1>
  <a class="button-style" href="{{ path('ono_admin_add_theme') }}">Ajouter un thème</a>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>
          Id
        </th>
        <th>
          Nom du thèmes
        </th>
        <th>
          Description
        </th>
      </tr>
    </thead>
    <tbody>
      {% for theme in themes %}
      <tr>
        <td>
          {{ theme.id }}
        </td>
        <td>
          {{ theme.libTheme }}
        </td>
        <td>
          {{ theme.description }}
        </td>
        <td>
          <a class="button-style bg-green no-marge" href="{{ path("ono_admin_edit_theme", {"id" : theme.id}) }}">Editer</a>
        </td>
        <td>
          <a class="button-style bg-red no-marge" href="{{ path("ono_admin_delete_theme", {"id" : theme.id}) }}">Supprimer</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}
