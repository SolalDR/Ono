{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "OnoMapBundle:Admin:layout.html.twig" %}


{% block body %}

  <div class="mainContent">
  {% if indefContent is defined %}
    <p class="confirm">Etes-vous certain de vouloir supprimer l'indéfinition suivante du tag "{{ title }}" ?</p>
    <p>{{ indefContent }}</p>
  {% else %}
    <p class="confirm">
      Etes-vous certain de vouloir supprimer "{{ title }}" ?
    </p>
  {% endif %}

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path(pathDelete, {'id': object.id}) }}" method="post">
      {# Ici j'ai écrit le bouton de soumission à la main #}
      <input type="submit" value="Supprimer" class="btn btn-danger" />
      {# Ceci va générer le champ CSRF #}
      {{ form_rest(form) }}
    </form>
  </div>

{% endblock %}
