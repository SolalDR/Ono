{% extends "OnoMapBundle::layout.html.twig" %}
{% block title %}{{ parent() }} Questions{% endblock %}

{% block body %}
  {% block bodyContent %}{{ parent() }}
    <div class="mainContent">
      <h1>Liste des questions</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Id</th>
            <th>Libell√© question</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for question in questions %}
          <tr>
            <td>{{ question.id }}</td>
            <td>{{ question.libQuestion }}</td>
            <td><a href="{{ path("ono_map_question_view",{"id":question.id}) }}">Voir</a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endblock %}
{% endblock %}
