{% trans_default_domain 'FOSUserBundle' %}

<p id="sign-in">
  Pas de compte ?<br> <a href="{{ path("fos_user_registration_register") }}">Inscrivez vous !</a>
</p>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="textfieldContainer">
      <label for="username">Nom d'utilisateur</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    <div class="textfieldContainer">
      <label for="password">Mot de passe</label>
      <input type="password" id="password" name="_password" required="required" />
    </div>
    <div class="checkboxContainer">
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
      <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input type="submit" id="_submit" name="_submit" class="btn bg-green" value="Connexion" />
    <a id="connect-later" class="btn bg-dark-grey" href="{{ path("ono_map_homepage") }}">Se connecter plus tard</a>
</form>
